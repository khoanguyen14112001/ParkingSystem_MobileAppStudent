<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.TopUpMainScreen">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_arror_left"
        android:layout_margin="16dp"
        android:id="@+id/imvBackTopUpMain"
        />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@id/txtTopUp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="25dp"
        android:src="@drawable/ic_i"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAllCaps="true"
        android:fontFamily="@font/fjalla_one_regular"
        android:textColor="@color/black"
        android:layout_marginTop="28dp"
        android:textSize="30sp"
        android:text="@string/top_up"
        android:id="@+id/txtTopUp"
        />

    <LinearLayout
        android:layout_width="match_parent"
            android:id="@+id/lnFragmentRelace"
        android:orientation="vertical"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/txtTopUp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>