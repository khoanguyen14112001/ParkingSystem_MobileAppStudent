<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.LoginSettingScreen">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtSettings"
            style="@style/in_BigHeaderText"
            android:text="@string/login_setting_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imvSettingBack"
            style="@style/imageViewComback"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:id="@+id/layoutOut"
            app:layout_constraintTop_toBottomOf="@id/txtSettings">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_yellow"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hello"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/be_vietnam_semibold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/truong_hoang_y"
                        android:textSize="16sp"
                        android:id="@+id/txtName"
                        android:textColor="@color/black"
                        android:fontFamily="@font/be_vietnam_medium"/>

                    <TextView
                        android:fontFamily="@font/be_vietnam_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/e_commerce_course_19"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imvAvatar"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:src="@drawable/img_avatar_female" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_dialog_custom"
                            android:fontFamily="@font/be_vietnam_regular"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/student"
                            android:textColor="@color/primary_yellow"
                            app:layout_constraintTop_toBottomOf="@id/imvAvatar"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:id="@+id/txtStudentEditInfo"
                            android:textSize="11sp"
                            android:layout_marginTop="8dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>




                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                >

                <TextView
                    style="@style/in_SmallHeaderText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Currently, this account is signed in on the following devices:" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_iphone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                            style="@style/in_SmallHeaderText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Iphone 8 plus" />


                        </LinearLayout>
                        <TextView
                            android:fontFamily="@font/be_vietnam_light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="IOS - Currently using"
                            android:textColor="@color/primary_yellow" />

                        <TextView
                            android:fontFamily="@font/be_vietnam_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last operating time" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wednesday, Dec 01, 2021 at 00:04:37 in Thu Duc, HCMC"
                            android:fontFamily="@font/be_vietnam_light"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_text"
                    app:layout_constraintVertical_bias="0.05" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_iphone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/in_SmallHeaderText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="IPhone 13 Pro Max" />

                        <TextView
                            android:fontFamily="@font/be_vietnam_light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="IOS" />

                        <TextView
                            android:fontFamily="@font/be_vietnam_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last operating time" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Friday, Jul 06, 2021 at 17:07:58 in California, United States"
                            android:fontFamily="@font/be_vietnam_light"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_text"
                    app:layout_constraintVertical_bias="0.05" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_iphone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/linearIphone">

                        <TextView
                            style="@style/in_SmallHeaderText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Samsung Galazy Z Flip3 5G" />

                        <TextView
                            android:fontFamily="@font/be_vietnam_light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Android" />

                        <TextView
                            android:fontFamily="@font/be_vietnam_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last operating time" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Monday, Mar 25, 2021 at 06:03:16 in Dak Nong, Viet Nam"
                            android:fontFamily="@font/be_vietnam_light"
                            android:textSize="12sp" />



                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:text="Sign out all devices"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/layoutOut"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.4"
            android:layout_gravity="center"
            style="@style/buttonLongYellow"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/btnSignOutAllDevices"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/btnSignOutAllDevices"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>