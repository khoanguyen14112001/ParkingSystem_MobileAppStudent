<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordScreen"
    android:orientation="vertical">

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/focus_thiefResetPassScreen"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.075"
        android:id="@+id/gLeft2"

        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.925"
        android:id="@+id/gRight2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arror_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.03"
        android:backgroundTint="@color/white"
        android:id="@+id/imvResetBack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fjalla_one_regular"
        android:paddingTop="9px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.12"
        android:textColor="@color/black"
        android:id="@+id/txtResetPass"
        android:text="Reset password"
        android:gravity="center"
        android:textSize="82px"
        />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtResetPass"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/imvResetBackScreen"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/img_forgot_pass"
        app:layout_constraintVertical_bias="0.07"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imvResetBackScreen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Enter your phone number \nand weâ€™ll send a code to your phone"
        android:gravity="center"
        android:id="@+id/txtEnterPhone"
        android:fontFamily="@font/be_vietnam_medium"
        android:textColor="#AB000000"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtEnterPhone"
        app:layout_constraintLeft_toLeftOf="@id/gLeft2"
        app:layout_constraintRight_toRightOf="@id/gRight2"
        app:layout_constraintVertical_bias="0.09"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/custom_edt"
        android:inputType="phone"
        android:textSize="36px"
        android:drawableStart="@drawable/ic_phone"
        android:paddingTop="36px"
        android:paddingBottom= "36px"
        android:paddingLeft="52px"
        android:drawablePadding="36px"
        android:hint="Phone"
        android:id="@+id/edtPhone"
        android:textColor="@color/xamChu"
        android:fontFamily="@font/be_vietnam_light"
        android:textColorHint="#8F8E8E"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="1dp"
        android:id="@+id/txtErrorPhone"
        android:textColor="@color/red"
        android:fontFamily="@font/be_vietnam_medium"
        android:paddingLeft="52px"

        app:layout_constraintTop_toBottomOf="@id/edtPhone"
        app:layout_constraintLeft_toLeftOf="@id/gLeft2"
        app:layout_constraintRight_toRightOf="@id/gRight2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="106px"
        android:background="@drawable/button_login"
        android:text="Send"
        app:layout_constraintTop_toBottomOf="@id/edtPhone"
        app:layout_constraintLeft_toLeftOf="@id/gLeft2"
        app:layout_constraintRight_toRightOf="@id/gRight2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:textAllCaps="false"
        android:fontFamily="@font/be_vietnam_medium"
        android:textColor="@color/black"
        android:textSize="45px"
        android:id="@+id/btnSendPassword"


        />
</androidx.constraintlayout.widget.ConstraintLayout>